<%= form_tag do %>
    <legend><h3>Sign in</h3></legend>

    <div>
        <%= label_tag :email, 'Correo' %>
        <%= text_field_tag :email, params[:email] %>
    </div>

    <div>
        <%= label_tag :password, 'Password' %>
        <%= password_field_tag :password, params[:password] %>
    </div>

    <div>
        <%= submit_tag "SIGN IN", class: "btn btn-primary" %>
    </div>
<% end %>
<br>