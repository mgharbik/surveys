<h3>Pregunta</h3>

<%= form_for [@question_group, question] do |f| %>
  <%- unless question.errors.empty? %>
    <ul>
      <%- question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :type %><br>
  <%= f.select :type, ::Rapidfire::QuestionForm::QUESTION_TYPES, {}, id: "question_type" %><br>

  <%= f.label :question_text %><br>
  <%= f.text_field :question_text %><br>

  <%= f.label :answer_options %><br>
  <%= f.text_area :answer_options, rows: 5 %><br>

  <h4>Other options</h4>
  <hr/>

  <%= f.label :answer_presence %><br>
  <%= f.check_box :answer_presence %><br>

  <%= f.label :answer_minimum_length %><br>
  <%= f.text_field :answer_minimum_length %><br>

  <%= f.label :answer_maximum_length %><br>
  <%= f.text_field :answer_maximum_length %><br>

  <%= f.label :answer_greater_than_or_equal_to %><br>
  <%= f.text_field :answer_greater_than_or_equal_to %><br>

  <%= f.label :answer_less_than_or_equal_to %><br>
  <%= f.text_field :answer_less_than_or_equal_to %><br>

  <%= f.submit 'Creare' %>
<% end %>
