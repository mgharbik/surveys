<h1>Roles</h1>

<%= link_to 'Crear Role', new_role_path, class: 'btn btn-success' %>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Borrar', role, method: :delete, data: { confirm: 'Estas seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

